%% -*- erlang -*-
{cover_enabled, false}.
{deps, [
]}.

{lib_dirs, ["deps"]}.
{erl_opts, [debug_info]}.

{port_specs, [
    {"(darwin|linux|freebsd)", "priv/moon_nif.so", ["c_src/*.cpp"]}
    ,{"win32", "priv/moon_nif.dll", ["c_src/*.cpp"]}
]}.

{port_env, [
    %% because make .o use CXX command but link use CC command, it will make mistake : undefined symbol xxxxxxxxx
    {"(darwin|linux|freebsd)", "CC", "c++"}
    % ,{"(darwin|linux|freebsd)", "CXXFLAGS", "$CXXFLAGS -I$LUA_PATH -I$BOOST_PATH"}
    ,{"(darwin|linux|freebsd)", "LDFLAGS", "$LDFLAGS -lboost_thread  -lluajit "}

    %% add your config if you need
    ,{"win32", "LUA_PATH", "d:/data/test/raymoon/deps/lua/src/"}
    ,{"win32", "BOOST_PATH", "d:/data/test/raymoon/deps/"}
    ,{"win32", "CXXFLAGS", "$CXXFLAGS -I$LUA_PATH -I$BOOST_PATH -GX"}
    ,{"win32", "LDFLAGS", "$LDFLAGS /LIBPATH:$LUA_PATH lua51.lib"}
]}.
